#include <stdio.h>

void fact() {

    unsigned long long sum = 0;

    unsigned long long n=0;

    unsigned long long i=0;

    printf("Enter an integer: ");

    scanf("%d", &n);



  

    if (n < 0)

        printf("At least one number is required");

    else {

        for (i = 1; i <= n; ++i) {

            sum=sum + i;

        }

        printf("Factorial of %d = %llu\n\n", n, sum);

    }



    

}
